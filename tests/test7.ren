extern fn printf(format: {u8}, ...) -> i32
extern fn malloc(size: i32) -> {u8}
extern fn free(ptr: {u8})

fn fac(n: i32) -> i32
{
    var res: i32
    if n <= 1
    {
        if (n == 1)
        {
            res = 1
        }
        else
        {
            return 1
        }
    }
    else
    {
        return n * fac(n - 1)
    }
    return res
}

fn main() -> i32
{   
    var n: i32 = 7
    printf("n: %d, result: %d", n, fac(n))
    
    var buf: {u8} = malloc(20)
    
    free(buf)
    return 0
}